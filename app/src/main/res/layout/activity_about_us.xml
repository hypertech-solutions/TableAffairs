<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".contact.AboutUs">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:contentDescription="@string/about_table_affairs"
                android:layout_width="match_parent"
                android:layout_height="345dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/aboutwords"
                android:layout_alignParentTop="true"
                android:id="@+id/image1"
                android:layout_marginTop="5dp"/>

        <ImageView
                android:layout_width="175dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/about4"
                android:id="@+id/image2"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/image1"
                android:layout_marginStart="25dp"/>
        <ImageView
                android:layout_width="175dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/about3"
                android:id="@+id/image3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/image1"/>
        <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/about1"
                android:scaleType="fitStart"
                android:layout_below="@+id/image2"
                android:id="@+id/image4"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="38dp"/>
        <ImageView
                android:layout_width="140dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/about5"
                android:id="@+id/image5"
                android:layout_below="@+id/image3"
                android:scaleType="fitStart"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/image3"
                android:layout_marginStart="18dp"/>
        <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/about2"
                android:id="@+id/image6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/image5"/>
    </RelativeLayout>
</ScrollView>