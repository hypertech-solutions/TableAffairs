<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">


    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/about1"
            android:contentDescription="@string/product_image"
            android:id="@+id/order_productImage"/>
    <TextView
            android:layout_toEndOf="@+id/order_productImage"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/lbl_product_name"
            android:layout_height="wrap_content"
            android:id="@+id/order_productName"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toEndOf="@+id/order_productImage"
            android:layout_below="@+id/order_productName"
            android:id="@+id/order_productPrice"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/order_productPrice"
            android:layout_toEndOf="@+id/order_productImage"
            android:id="@+id/order_productQty"/>

    <TextView
            android:layout_below="@id/order_productQty"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/order_productDesc"/>

</RelativeLayout>