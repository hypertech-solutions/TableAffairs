<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        tools:context=".checkout.ConfirmationActivity">

    <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_confirmGreetings"/>

    <TextView
            android:layout_below="@+id/tv_confirmGreetings"
            android:text="@string/your_order_has_been_placed_successfully_with_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_below="@+id/textView3"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_confirmOrderId"/>

    <TextView
            android:layout_below="@id/tv_confirmOrderId"
            android:text="@string/confirm_id_message"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"/>

    <TableLayout
            android:layout_below="@+id/textView7"
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

        <TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Amount : " />

            <TextView
                    android:id="@+id/paymentAmount"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : " />

            <TextView
                    android:id="@+id/paymentStatus"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Id : " />

            <TextView
                    android:id="@+id/paymentId"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>

    <TextView
            android:layout_below="@+id/table"
            android:text="@string/thank_you_for_working_with_table_affairs"
            android:layout_width="match_parent"
            android:id="@+id/thanks_message"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="@string/back_to_home"
            android:layout_below="@+id/thanks_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_home_black_24dp"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:id="@+id/tv_confirmBackToHome"/>

</RelativeLayout>