<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".cart.ShoppingCart"
        android:background="#faf7f7"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="7dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_empty_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?android:attr/listPreferredItemHeight"
                android:layout_marginBottom="?android:attr/listPreferredItemHeight"
                android:gravity="center"
                android:textSize="20sp"
                android:visibility="gone"
                android:textColor="#0000"
                android:text="@string/you_have_no_items_in_the_cart"/>

        <ImageView
                android:contentDescription="@string/add_items_in_cart"
                android:id="@+id/iv_empty_cart"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:layout_marginBottom="?android:attr/listPreferredItemHeight"
                android:layout_gravity="center"
                android:background="@drawable/ic_add_shopping_cart_black_24dp"/>

        <ListView
                android:id="@+id/listViewCartItems"
                tools:listitem="@layout/ticket_shopping_cart_item"
                android:layout_width="match_parent"
                android:divider="@drawable/separator_vertical"
                android:dividerHeight="8dp"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/tv_price"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <Button
                android:id="@+id/btn_checkOut"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/proceed_to_checkout"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_buy"/>

        <TextView
                android:id="@+id/tv_shopping"
                android:text="@string/continue_shopping"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>