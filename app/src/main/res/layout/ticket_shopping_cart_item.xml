<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:paddingBottom="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp">
        <ImageView
                card_view:srcCompat="@drawable/about4"
                android:contentDescription="@string/product_image"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:id="@+id/product_image"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        <TextView
                android:id="@+id/product_name"
                android:text="@string/product_name"
                android:textSize="14sp"
                android:layout_toStartOf="@+id/remove_from_cart"
                android:layout_toEndOf="@+id/product_image"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:contentDescription="@string/remove_item_from_cart"
                android:id="@+id/remove_from_cart"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:layout_marginEnd="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"/>
        <TextView
                android:id="@+id/price"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_below="@id/product_name"
                android:layout_toEndOf="@+id/product_image"
                android:layout_marginTop="15dp"
                android:text="@string/price"
                android:textColor="#868484"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/product_price"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_below="@+id/product_name"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/price"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/quantity"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_below="@+id/product_price"
                android:layout_toEndOf="@id/product_image"
                android:textSize="14sp"
                android:text="@string/quantity"
                android:textColor="#868484"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:contentDescription="@string/decrease_quantity"
                android:id="@+id/decrease"
                android:layout_below="@+id/product_price"
                android:layout_toEndOf="@+id/quantity"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:layout_marginEnd="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"/>
        <TextView
                android:id="@+id/item_quantity"
                android:text="@string/_1"
                android:layout_marginEnd="20dp"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_below="@+id/product_price"
                android:layout_toEndOf="@id/decrease"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:contentDescription="@string/increase_quantity"
                android:id="@+id/increase"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_below="@+id/product_price"
                android:layout_toEndOf="@+id/item_quantity"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/decrease"
                android:layout_toEndOf="@id/product_image"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/netPrice"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>